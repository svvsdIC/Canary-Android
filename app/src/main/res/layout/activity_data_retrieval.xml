<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michelle.projectcanarychordsapp.DataRetrievalActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="137dp"
        android:layout_marginTop="41dp"
        android:text="Data Transfer"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/outputDataHereTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/InputDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="6dp"
        android:text="START"
        app:layout_constraintBaseline_toBaselineOf="@+id/stopInputDataButton"
        app:layout_constraintEnd_toStartOf="@+id/stopInputDataButton"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="InputStreamControl"
        />

    <Button
        android:id="@+id/stopInputDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="328dp"
        android:text="STOP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/InputDataButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:onClick="InputStreamControl"
        />

    <TextView
        android:id="@+id/outputDataHereTextview"
        android:layout_width="348dp"
        android:layout_height="255dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="23dp"
        android:text="Data Output:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>
